@{
    ViewData["Title"] = "Empleados";
}

<div class="text-center">
    <h1 class="display-4">Lista de Empleados</h1>
</div>


<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#empleadosModal" onclick="NuevoEmpleado()">
    Empleado Nuevo
</button>

<!-- Modal -->
<div class="modal fade" id="empleadosModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tituloModal"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" id="EmpleadoID" value="0">

                    <label for="Nombre" class="form-label">Nombre</label>
                    <input type="text" id="Nombre" class="form-control">

                    <label for="LocalidadID" class="form-label">Localidad</label>
                    @Html.DropDownList("LocalidadID", null, htmlAttributes: new { @class = "form-control" })

                    <label for="SectorID" class="form-label">Sector</label>
                    @Html.DropDownList("SectorID", null, htmlAttributes: new { @class = "form-control" })

                    <label for="Apellido" class="form-label">Apellido</label>
                    <input type="text" id="Apellido" class="form-control">

                    <label for="Direccion" class="form-label">Direccion</label>
                    <input type="text" id="Direccion" class="form-control">
                    
                    <label for="Nacimiento" class="form-label">Fecha de nacimiento</label>
                    <input type="date" id="Nacimiento" class="form-control">

                    <label for="Telefono" class="form-label">Telefono</label>
                    <input type="text" id="Telefono" class="form-control">

                    <label for="Email" class="form-label">Email</label>
                    <input type="email" id="Email" class="form-control">

                    <label for="Salario" class="form-label">Salario</label>
                    <input type="text" id="Salario" class="form-control">

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="LimpiarModal()">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarEmpleado()">Guardar</button>
            </div>
        </div>
    </div>
</div>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Localidad</th>
            <th>Sector</th>
            <th>Direccion</th>
            <th>Fecha de Nacimiento</th>
            <th>Telefono</th>
            <th>Email</th>
            <th>Salario</th>
            <th>Editar</th>
            <th>Eliminar</th>
        </tr>
    </thead>
    <tbody id="tbody-empleados"></tbody>
</table>

@section Scripts {
    <script src="~/js/empleados.js"></script>
}
